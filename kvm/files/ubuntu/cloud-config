#cloud-config
hostname: ##HOSTNAME##
manage_etc_hosts: true
users:
  - name: ##USER##
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: users, admin
    home: /home/##USER##
    shell: /bin/bash
    lock_passwd: false
    ssh-authorized-keys:
      - ##PUBKEY##
# only cert auth via ssh (console access can still login)
